<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="courses.cmsc436.storybuddies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StoryBuddiesBaseActivity"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
			<intent-filter>
			    <action android:name="android.nfc.action.TECH_DISCOVERED"/>
			    <meta-data android:name="android.nfc.action.TECH_DISCOVERED"
			        android:resource="@xml/nfc_tech_filter" />
			</intent-filter>
			
			<intent-filter>
			    <action android:name="android.nfc.action.TAG_DISCOVERED" />
			    <category android:name="android.intent.category.DEFAULT" />
			</intent-filter> 
        </activity>
        <activity
       	    android:name=".StartScreenActivity" >
       	</activity>
        <activity
       	    android:name=".ChooseStoryActivity"  >
       	</activity>
       	<activity 
       	    android:name=".CYOS_Title_Screen" >
       	</activity>
       	<activity 
       	    android:name=".CYOS_Creation_Page" >
       	</activity>
       	<activity 
       	    android:name=".CoverPageActivity"  >
       	</activity>
       	<activity 
       	    android:name=".StoryPageActivity"  >
       	</activity>
    </application>

</manifest>
